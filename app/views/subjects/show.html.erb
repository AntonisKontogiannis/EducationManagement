        <div class="d-flex mb-3 w-50" style="height: 40px;">
          <input class="search form-control w-75" placeholder="<%= (session[:lang].nil? or session[:lang] == 'gr') ? "Aναζήτηση" : "Search" %>" />
          <button class="sort btn btn-dark" data-sort="studDate">
